.whl_img_wrap
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;

	> div
		box-sizing: border-box;

	.whl_relative
		position: relative;

	.whl_count
		position: absolute;
		background-color: #fff;
		border-radius: 5px;
		padding: 1px 3px;
		font-size: 10px;
		box-shadow: 3px 3px 4px #555;
		font-family: Arial, Helvetica, sans-serif;
		user-select: none;

.whl_img_des_wrapper
	position: absolute;
	color: #fff;
	font-size: 10px;
	font-family: Arial, Helvetica, sans-serif;
	bottom: 0;
	left: 0;
	right: 0;
	// top: calc(100hv - 140px);
	user-select: none;
	padding: 5px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;

	.whl_img_des_date
		font-size: 16px;
		text-shadow: 1px 1px 3px #000;
	.whl_img_des_title
		font-size: 24px;
		word-break: break-all;
		word-wrap: break-word;
		span
			overflow: hidden;
			white-space: nowrap;
			text-overflow: ellipsis;
			display: -webkit-box;
			-webkit-line-clamp: 2;
			-webkit-box-orient: vertical;
			white-space: normal;
			text-shadow: 1px 1px 3px #000;
			// -webkit-text-stroke: .4px black;
	.whl_img_des_count
		margin-top: 5px;
		text-shadow: 1px 1px 3px #000;
		font-size: 12px;

.whl_img_des_wrapper_hover
	background-color rgba(0, 0, 0, .4);
	
.whl_img_cover
	position: absolute;
	top: 0;
	left: 0;
	cursor: pointer;
	z-index: 1;


.whl_hover_wrapper
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
	justify-content: center;
	align-items: center;

.whl_lightbox_wrapper
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 100;

	> *:not(:first-child)
		z-index: 100;

.whl_lightbox_cover 
	width: 100%;
	height: 100%;
	position: absolute;
	cursor: pointer;
	z-index: 99;

.whl_photos
	max-width: 85%;
	height: 95%;
	background-color: #000;
	// display: flex;
	// align-items: center;
	padding: 44px 0;
	border-radius: 5px;
	position: relative;
	box-sizing: border-box;

	.whl_close_btn
		position: absolute;
		top: 10px;
		right: 10px;
		color: #fff;
		cursor: pointer;
		user-select: none;
		border-radius: 50%;
		background-color: rgba(0 ,0, 0, .3);

	.whl_abs_title
		position: absolute;
		top: 10px;
		color: #fff;
		left: 50%;
		font-size: 18px;
		transform: translate(-50%, 0);
		font-family: Arial, Helvetica, sans-serif;

	img
		max-width: 100%;
		max-height: 100%;
		user-select: none;
		display: block;
		margin: auto;
	
	.left_arrow
		left: 5px;

	.right_arrow
		right: 5px;


	.slideshow
		position: relative;
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		&:hover
			.arrow, .page_wrapper
				visibility: visible;

	.arrow
		position: absolute;
		border-radius: 50%;
		background-color: rgba(0, 0, 0, 0.2);
		margin: auto;
		top: 50%;
		transform: translate(0px, -50%);
		cursor: pointer;
		user-select: none;
		visibility: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgba(255, 255, 255, .8);

		&:hover {
			background-color: rgba(0, 0, 0, 0.3);
		}

		&:active {
			background-color: rgba(0, 0, 0, 0.4);
		}

	.page_wrapper
		position: absolute;
		bottom: 10px;
		transform: translate(-50%, 0px);
		left: 50%;
		display: flex;
		align-items: center;
		height: 8px;
		visibility: hidden;

		.page_index {
			padding: 6px;
			background-color: rgba(0, 0, 0, 0.1);
			margin: 0 3px;
			border-radius: 50%;
			cursor: pointer;
			transition: padding 0.2s;
			border: 0.01px solid #fff;

			&:hover {
				animation-name: page_hover;
				animation-duration: 0.2s;
				padding: 8px;
				background-color: rgba(0, 0, 0, 0.4);
			}

			&:active {
				background-color: rgba(0, 0, 0, 0.5);
			}
		}

		.page_select {
			background-color: rgba(255, 255, 255, 0.3);
			border: 0.01px solid rgba(0, 0, 0, 0.5);
		}

		@keyframes page_hover
			from {
					padding: 6px;
			}

			to {
					padding: 8px;
			}




.whl_img_edit_container
	position absolute
	display: flex
	justify-content: space-between
	width: 90%
	top: 5px
	z-index 2
	>span
		cursor pointer
		user-select none
		font-size: 30px
	&:hover
		>span
			opacity 1


.whl_img_edit_star
	color: #f0f0f0
	text-shadow: 1px 1px 3px #000;
	opacity 0
	&:hover
		color: #e7d005

.whl_img_edit_star_active
	color: #e7d005
	opacity 1
	

.whl_img_edit_del
	color: #f0f0f0
	text-shadow: 1px 1px 3px #000;
	opacity 0
	&:hover
		color: #e30000

.whl_album
	&:hover
		.whl_img_edit_container
			>span
				opacity 1	
